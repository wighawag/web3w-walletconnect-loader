{
  "name": "web3w-walletconnect-loader",
  "version": "0.1.8",
  "description": "Wallet Connect module loader for web3w",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "browser": "dist/amd/index.js",
  "files": [
    "dist/"
  ],
  "author": "Ronan Sandford",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh@github.com:wighawag/web3w-walletconnect-loader.git"
  },
  "keywords": [
    "web3w",
    "web3",
    "wallet",
    "walletconnect",
    "ethereum"
  ],
  "devDependencies": {
    "@ethersproject/bignumber": "^5.0.0",
    "@ethersproject/contracts": "^5.0.0",
    "@ethersproject/providers": "^5.0.0",
    "@types/node": "^14.6.4",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "terser": "^5.2.1",
    "terser-folder": "^2.0.0",
    "typescript": "^3.8.3",
    "web3w": "^0.2.14"
  },
  "scripts": {
    "prepare": "node ./.setup.js && npm run lint && npm run build",
    "dev": "tsc -w -p tsconfig.json",
    "build:esm": "rimraf dist/esm && tsc -p tsconfig.json",
    "build:cjs": "rimraf dist/cjs && tsc -p tsconfig-cjs.json",
    "build:amd": "rimraf dist/amd && tsc -p tsconfig-amd.json && terser-folder dist/amd -e -x .js -o dist/amd --config-file terser.json",
    "build": "run-s build:esm build:cjs build:amd",
    "lint": "eslint src/**/*.{js,ts,tsx} --quiet --fix"
  },
  "dependencies": {
    "named-logs": "^0.0.7"
  }
}
